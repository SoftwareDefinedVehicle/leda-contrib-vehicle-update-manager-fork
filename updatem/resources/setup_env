# BINARIES_DEST_DIR is the path used to install updatemanagerd
BINARIES_DEST_DIR=/usr/local/bin

# DAEMON_BINARY_NAME defines the name of generated daemon binary
DAEMON_BINARY_NAME=updatemanagerd

# SERVICES_DEST_DIR is the path used to install the updatemanagerd's Linux services
SERVICES_DEST_DIR=/etc/systemd/system

# DAEMON_SERVICE_NAME defines the updatemanagerd's Linux service name
DAEMON_SERVICE_NAME=updatemanagerd.service
